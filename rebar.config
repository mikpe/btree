%% -*- erlang -*-
{eunit_opts, [verbose]}.
{erl_opts, [ debug_info
           , warn_unused_vars
           , warn_shadow_vars
           , warn_unused_import
           , warn_obsolete_guard
           , warnings_as_errors
           ]}.

%% When updating the NIF, you must update so_name and
%% src/nifversion.hrl to the same, newer, version.
{so_name, "btree-1.0.so"}.

{port_envs, [
              {"DRV_CFLAGS", "$DRV_CFLAGS -fomit-frame-pointer -Werror"}
            ]}.
{deps,
 [ {proper, ".*",
    { git,
      "https://github.com/manopapad/proper.git",
      {branch, master} } }
 ]}.
